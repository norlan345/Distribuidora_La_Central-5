        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    /* Estructura principal del sidebar */
    .sidebar {
        width: 280px;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        background: var(--sidebar-bg);
        backdrop-filter: blur(10px);
        border-right: 1px solid var(--sidebar-border);
        display: flex;
        flex-direction: column;
        z-index: 1000;
        transition: var(--transition);
    }

    .sidebar-container {
        padding: 20px;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    /* Encabezado del sidebar */
    .sidebar-header {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px 0;
        margin-bottom: 20px;
        border-bottom: 1px solid var(--sidebar-border);
    }

    .sidebar-brand {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-color);
        white-space: nowrap;
    }

    /* Lista de navegación */
    .nav-menu {
        list-style: none;
        flex-grow: 1;
        overflow-y: auto;
        padding-right: 5px;
        margin: 0;
    }

    /* Elementos del menú */
    .nav-item {
        margin-bottom: 8px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        color: var(--light-text);
        text-decoration: none;
        border-radius: 8px;
        transition: var(--transition);
        position: relative;
    }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text-color);
        }

        .nav-link.active {
            background: var(--active-bg);
            color: var(--text-color);
        }

        .nav-link svg {
            width: 24px;
            height: 24px;
            fill: currentColor;
        }

    .nav-text {
        font-size: 1rem;
    }

    /* Pie del sidebar */
    .sidebar-footer {
        padding-top: 20px;
        border-top: 1px solid var(--sidebar-border);
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: var(--primary-color);
        color: var(--text-color);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: bold;
        font-size: 1rem;
    }

    .user-details {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .user-role {
        font-size: 0.8rem;
        color: var(--light-text);
    }

    .logout-btn {
        background: none;
        border: none;
        cursor: pointer;
        color: var(--light-text);
        transition: var(--transition);
    }

        .logout-btn:hover {
            color: var(--text-color);
        }

        .logout-btn svg {
            width: 24px;
            height: 24px;
            fill: currentColor;
        }

    /* Adaptabilidad móvil */
    @@media (max-width: 768px) {
        .sidebar

    {
        width: 220px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        transform: translateX(-100%);
        transition: var(--transition);
    }

    .sidebar.active {
        transform: translateX(0);
    }

    .sidebar-container {
        padding: 15px;
    }

    .sidebar-header {
        justify-content: center;
    }

    .sidebar-brand {
        font-size: 1rem;
    }

    .nav-text {
        font-size: 0.9rem;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        font-size: 0.9rem;
    }

    }
</style>


